<form bindsubmit='ChangeInfos'>
  <view class="cu-form-group ">
    <view class='title'>姓名</view>
    <input class='radius' name='Username' value='{{Info.usrName}}'></input>
    
  </view>
  <view class="cu-form-group ">
    <view class='title'>学号</view>
    <input class='radius' name='UserNumber' value='{{Info.usrNumber}}'></input>
  </view>
  <view class="cu-form-group ">
    <view class='title'>学院</view>
    <input class='radius' name='UserAcademy' value='{{Info.usrAcademy}}'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>性别</view>
    <input class='radius'  name='UserSex' value='{{Info.usrSex }}'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>简介</view>
    <input class='radius'  name='UserDescribes' value='{{Info.userDescribes}}'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>联系方式</view>
    <input class='radius' type='string' name='UserContact' value='{{Info.userContact}}'></input>
  </view>
  <button class="weui-btn" type="primary" form-type='submit'>修改</button>
</form>

