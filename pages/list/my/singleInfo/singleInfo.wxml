  <view class="cu-form-group ">
    <view class='title'>姓名</view>
    <input class='radius' name='Username' value='{{form_info}}'></input>
    
  </view>
  <view class="cu-form-group ">
    <view class='title'>学号</view>
    <input class='radius' name='UserNumber' value='{{form_info}}'></input>
  </view>
  <view class="cu-form-group ">
    <view class='title'>学院</view>
    <input class='radius' name='Academy' value='{{form_info}}'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>性别</view>
    <input class='radius'  name='sex' value='{{form_info}}'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>简介</view>
    <input class='radius'  name='describes' value='{{form_info}}'></input>
  </view>
