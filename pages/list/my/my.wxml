<!-- index.wxml -->
<!-- 用于用户登录以及显示用户昵称 -->
<import src='/pages/template/list_sort_team.wxml' />
<view class="cu-bar bg-white solid-bottom margin-top">
  <view class='action'>
    <text class='icon-title text-orange '></text>
    我的
  </view>
</view>
<!-- 菜单列表 -->
<view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}}">
  <!-- 显示自己创建的队伍 -->
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <view>
      <button class="cu-btn content" bindtap="onChangeShowState">
        <text class='icon-btn text-olive'></text>
        <text class='text-grey'>我创建的队伍</text>
        <icon type="search" size="23" color="" /> 
      </button>
    </view>
  </view>
  
  <!-- 首先是队伍显示界面，点击之后隐藏 -->
  <view class="hide{{showView?'show':''}}">
    <block wx:for="{{information}}" wx:key="{{index}}">
      <view class="divLine" data-index='{{index}}' catchtap="getTeam">
        <template is="teamItem" data="{{...item}}" />
      </view>
      
    </block>
  </view>
  <!-- 点击之后输入条件，输入结束之后先跳转到结果界面，之后返回到本页面 -->
  
  
  <!-- 在使用过程中，有问题请联系我们 -->
  <view class="cu-item {{menuArrow?'arrow':''}}">
    <button class='cu-btn content'>
      <text class='icon-discoverfill text-orange'></text>
      <text class='text-grey'>联系我们</text>
    </button>
  </view>
  <!-- 管理员页面 -->
  <view wx:if="{{openid=='oJAw44-b39ABKsBg6XFNX7wdH4NI'}}" class="cu-item {{menuArrow?'arrow':''}}">
    <button class='cu-btn content' bindtap='allTeams'>
      <text class='icon-discoverfill text-orange'></text>
      <text class='text-grey'>管理队伍</text>
    </button>
  </view>

</view>